# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Database (SQLite for local dev, PostgreSQL for production)
DATABASE_URL=./agent_layer.db
# For Fly.io PostgreSQL:
# DATABASE_URL=postgres://user:password@host:5432/agent_layer

# Auth
API_KEY=dev-key

# Rate limiting
RATE_LIMIT=100

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=*

# ============================================
# Notifications
# ============================================

# Slack Webhook URL for lead notifications
# Get from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email provider (choose one)
# Option 1: Resend (recommended)
RESEND_API_KEY=re_xxxxxxxx
# Option 2: SendGrid
# SENDGRID_API_KEY=SG.xxxxxxxx

# From email for confirmations
FROM_EMAIL=notifications@jupitlunar.com

# ============================================
# Site Connectors (optional data URLs)
# ============================================

# EdmontonPlayground data source URL
EDMONTONPLAYGROUND_DATA_URL=

# AlbertaClinics data source URL
ALBERTACLINICS_DATA_URL=

# ABControl data source URL
ABCONTROL_DATA_URL=
